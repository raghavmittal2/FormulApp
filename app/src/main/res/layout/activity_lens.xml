<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/FAheaderItalics"
        android:text="Lens Calculator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_u2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="distance between object and lens 'u'"
        android:inputType="numberDecimal|numberSigned" />

    <EditText
        android:id="@+id/et_v2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="distance between image and lens 'v'"
        android:inputType="numberDecimal|numberSigned" />

    <Button
        android:id="@+id/bt_go2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOLVE" />

    <Button
        android:id="@+id/clr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLEAR" />

    <TextView
        android:id="@+id/result01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/result02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"/>

    <TextView
        android:id="@+id/result03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="24dp"/>
</>