<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="405dp"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbarStyle="outsideInset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/title"
                style="@style/FAheaderItalics"
                android:text="Graph Generator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/first_fct"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:ems="20"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upper_bound_y" />

            <TextView
                android:id="@+id/txt_lower_bound"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_below="@+id/first_fct"
                android:layout_alignParentRight="@+id/txt_upper_bound"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"

                android:layout_marginTop="8dp"
                android:ems="20"
                android:text="Lower bound"
                app:layout_constraintStart_toStartOf="@+id/lower_bound_y"
                app:layout_constraintTop_toBottomOf="@+id/lower_bound_y" />

            <TextView
                android:id="@+id/txt_upper_bound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_fct"
                android:layout_alignLeft="@+id/txt_lower_bound"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:ems="20"
                android:text="Upper bound "
                app:layout_constraintStart_toStartOf="@+id/txt_lower_bound"
                app:layout_constraintTop_toBottomOf="@+id/txt_lower_bound" />


            <EditText
                android:id="@+id/lower_bound_x"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@+id/txt_lower_bound"
                android:layout_alignParentRight="@+id/upper_bound_x"
                android:layout_marginTop="8dp"
                android:ems="1"
                android:hint="Horizontal axis"
                android:inputType="numberDecimal|numberSigned"

                app:layout_constraintStart_toStartOf="@+id/txt_upper_bound"
                app:layout_constraintTop_toBottomOf="@+id/txt_upper_bound" />

            <EditText
                android:id="@+id/upper_bound_x"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txt_upper_bound"
                android:layout_alignLeft="@+id/lower_bound_x"
                android:ems="1"
                android:hint="Horizontal axis"
                android:inputType="numberDecimal|numberSigned"
                app:layout_constraintTop_toBottomOf="@+id/first_fct"
                tools:layout_editor_absoluteX="151dp" />


            <EditText
                android:id="@+id/lower_bound_y"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/lower_bound_x"
                android:layout_alignParentRight="@+id/upper_bound_y"
                android:layout_marginTop="8dp"
                android:ems="1"
                android:hint="Vertical axis"

                android:inputType="numberDecimal|numberSigned"
                app:layout_constraintTop_toBottomOf="@+id/upper_bound_x"
                tools:layout_editor_absoluteX="0dp" />

            <EditText
                android:id="@+id/upper_bound_y"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/upper_bound_x"
                android:layout_alignLeft="@+id/lower_bound_y"
                android:ems="1"
                android:hint="Vertical axis"
                android:inputType="numberDecimal|numberSigned"
                tools:layout_editor_absoluteX="172dp"
                tools:layout_editor_absoluteY="80dp" />


            <Button
                android:id="@+id/ok_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lower_bound_y"
                android:layout_marginTop="8dp"
                android:onClick="goToGraph"

                android:text="Ok"
                app:layout_constraintTop_toBottomOf="@+id/lower_bound_x"
                tools:layout_editor_absoluteX="0dp" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</LinearLayout>