<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:auto="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/Header"
        style="@style/FAheaderItalics"
        android:text="Inputting Formulae"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="160dp"
        android:text="x^2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Header" />


    <io.github.kexanie.library.MathView
        android:id="@+id/formula"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box1"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="e^x"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="@+id/box1"
        app:layout_constraintTop_toBottomOf="@+id/box1" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box2"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="ln(x)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box2" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"

        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="60sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box3"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:text="sin(x)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box3" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="35dp"

        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/formula2"
        app:layout_constraintTop_toTopOf="@id/formula2"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        android:text="cos(x)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@+id/box4"
        tools:layout_editor_absoluteX="8dp" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula4"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"

        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box5"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="tan(x)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box5" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula5"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"

        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box6"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/box7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="sqrt(x)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:typeface="serif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box6" />

    <io.github.kexanie.library.MathView
        android:id="@+id/formula6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/submit_fct"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:typeface="serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/box7"
        auto:text="$$\\sqrt{x)$$"></io.github.kexanie.library.MathView>





</android.support.constraint.ConstraintLayout>