<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="null">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Header"
                android:text="3 D Shapes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/FAheaderItalics" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sph_btn"
                    style="@style/FAtile"
                    android:layout_weight="2"
                    android:background="@drawable/cyan"
                    android:text="Sphere" />

                <Button
                    android:id="@+id/cub_btn"
                    style="@style/FAtile"
                    android:text="Cube"
                    android:background="@drawable/softblue"
                    android:layout_weight="2" />

                <Button
                    android:id="@+id/cui_btn"
                    style="@style/FAtile"
                    android:text="Cuboid"
                    android:layout_weight="2"
                    android:background="@drawable/lavender" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/con_btn"
                    style="@style/FAtile"
                    android:layout_weight="2"
                    android:background="@drawable/lavender"
                    android:text="Cone" />

                <Button
                    android:id="@+id/frus_btn"
                    style="@style/FAtile"
                    android:text="Frustrum"
                    android:background="@drawable/cyan"
                    android:layout_weight="2" />

                <Button
                    android:id="@+id/tetr_btn"
                    style="@style/FAtile"
                    android:text="Tetrahedron"
                    android:layout_weight="2"
                    android:background="@drawable/softblue" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/ocz_btn"
                    style="@style/FAtile"
                    android:layout_weight="2"
                    android:background="@drawable/softblue"
                    android:text="Octahedron" />

                <Button
                    android:id="@+id/cyl_btn"
                    style="@style/FAtile"
                    android:text="Cylinder"
                    android:background="@drawable/lavender"
                    android:layout_weight="2" />

                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>